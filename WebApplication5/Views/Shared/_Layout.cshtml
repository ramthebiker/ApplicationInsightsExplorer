
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - AppInsights CIBC</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href=”//maxcdn.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css” rel=”stylesheet”>
    <link rel="icon" type="image/x-icon" href="@Url.Content("~/images/appInsights.png")">
</head>
<body>
    <header class="clearfix">
        <div class="container">
            <div class="header-top">
                <img class="cibc-logo" alt="CIBC logo" src="~/images/new150.png">
            </div>
        </div>
        <div class="container">
            <div class="header-left">
                &nbsp;
            </div>
            <div class="header-right">
                <label for="open">
                    <span class="hidden-desktop"></span>
                </label>
                <input type="checkbox" name="" id="open">
                <nav>
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Home", "Login", "Home")</li>
                        <li>@Html.ActionLink("Events", "Events", "Home")</li>
                        <li>@Html.ActionLink("Metrics", "Metrics", "Home")</li>
                        <li>@Html.ActionLink("Query", "Query", "Home")</li>
                    </ul>
                </nav>
            </div>
        </div>
    </header>
    <div id="blq-content" class="main-content" tabindex="-1">
        @RenderBody()
        <hr />
        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)

        <footer style="background-color:#AF0B1C">
            
            <div class="social-media color-bg-global-19">
                <div class="row">
                    <div class="large-6 medium-6 columns small-12">
                        <div class="section-container no-top columns small-12">
                            <div class="footer-logo">



                                <img class="cibc-logo" alt="CIBC logo" src="~/images/cibcfooter.png">


                            </div>
                            <div class="footer-copyright medium-text-left">
                                <p>Canadian Imperial Bank of Commerce Website - Copyright © CIBC.</p>
                            </div>
                        </div>
                    </div>
                    <div class="columns small-12 hide-for-medium-up">
                        <div class="section-container no-top">
                            <hr class="keyline-horizontal">
                        </div>
                    </div>
                </div>
            </div>
        </footer>
    </div>
</body>
</html>
